<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:webfragment="http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	    http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	id="bpms-dashboard" version="3.0">

	<name>bpms-dashboard</name>

	<servlet>
		<servlet-name>bpms-dashboard-spring-servlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:bpms-dashboard/bpms-dashboard-servlet.xml, classpath:bpms-console/bpms-console-config.xml, classpath:workflow/tempo-ui-fw-template-beans.xml</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>bpms-dashboard-spring-servlet</servlet-name>
		<url-pattern>/dashboard/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CryptoServlet</servlet-name>
		<servlet-class>org.intalio.tempo.web.CryptoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CryptoServlet</servlet-name>
		<url-pattern>/encrypt</url-pattern>
	</servlet-mapping>

	<filter>
	    <filter-name>SecurityFilter</filter-name>
	    <filter-class>org.intalio.tempo.web.KerberosFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<servlet-name>bpms-dashboard-spring-servlet</servlet-name>
	</filter-mapping>

	<filter>
		<filter-name>webAuth</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>webAuthFilter</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>webAuth</filter-name>
		<servlet-name>bpms-dashboard-spring-servlet</servlet-name>
	</filter-mapping>

	<filter>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>com.intalio.filter.URLRewriteFilter</filter-class>
		<init-param>
		    <param-name>logLevel</param-name>
		    <param-value>DEBUG</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/deployment/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/ode/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/axis2/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/axis2-web/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/axis2-admin/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/intalio/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>//intalio/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

</web-fragment>
