<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
	http://www.springframework.org/schema/tx
	http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">

	<context:property-placeholder
		location="file:${INTALIO_CONF}/common/base-config.properties" order="1" ignore-unresolvable="false" />
    <import resource="file:${INTALIO_CONF}/hibernate/hibernate-properties.xml" />

	<bean name="social.jsonView"
		class="org.springframework.web.servlet.view.json.MappingJacksonJsonView" />
	<context:component-scan base-package="com.intalio.bpms.social" />
	<context:annotation-config />
	<tx:annotation-driven transaction-manager="social.transactionManager" />

	<bean id="social.dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>${com.intalio.bpms.jndi.bpmsdb}</value>
		</property>
	</bean>

	<bean id="social.sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref local="social.dataSource" />
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.intalio.bpms.social.model.Comment</value>
			</list>
		</property>
		<property name="hibernateProperties" ref="hibernateProperties" />
	</bean>

	<!-- Hibernate Transaction Manager Definition -->
	<bean id="social.transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="social.sessionFactory" />
		</property>
	</bean>

	<mvc:annotation-driven />

	<bean id="social.commentService" class="com.intalio.bpms.social.service.impl.CommentServiceImpl" />

	<bean id="social.commentsDAO"
		class="com.intalio.bpms.social.dao.impl.CommentsDAOImpl">

		<property name="sessionFactory">
			<ref bean="social.sessionFactory" />
		</property>
	</bean>
</beans>