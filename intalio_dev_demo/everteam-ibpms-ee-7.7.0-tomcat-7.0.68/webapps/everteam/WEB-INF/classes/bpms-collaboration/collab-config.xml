<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

        <context:property-placeholder
	      location="file:${INTALIO_CONF}/common/base-config.properties" order="1" ignore-unresolvable="false" />

	<context:component-scan base-package="com.intalio.collaboration" >
	      <context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
	</context:component-scan>

	<tx:annotation-driven transaction-manager="collab.transactionManager" />
	<import resource="file:${INTALIO_CONF}/hibernate/hibernate-properties.xml" />
	<bean id="collab.dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>${com.intalio.bpms.jndi.bpmsdb}</value>
		</property>
	</bean>


	<bean id="collab.sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref local="collab.dataSource" />
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.intalio.collaboration.model.Project</value>
				<value>com.intalio.collaboration.model.Lock</value>
				<value>com.intalio.collaboration.model.Branch</value>
				<value>com.intalio.collaboration.model.Commit</value>
				<value>com.intalio.collaboration.model.Repository</value>
				<value>com.intalio.collaboration.model.Resource</value>
				<value>com.intalio.collaboration.model.Tag</value>
				<value>com.intalio.collaboration.model.CommitDetail</value>
			</list>
		</property>
		<property name="hibernateProperties" ref="hibernateProperties" />
	</bean>

	<!-- Hibernate Transaction Manager Definition -->
	<bean id="collab.transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="collab.sessionFactory" />
		</property>
	</bean>

	<bean id="collab.messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>bpms-collaboration/collab-messages</value>
			</list>
		</property>
	</bean>

	<bean id="collab.authFilter"
		class="com.intalio.collaboration.filter.AuthFilter" />
	<bean id="collab.authService"
		class="com.intalio.collaboration.authentication.AuthenticationServiceImpl" />

	<bean id="collab.config" class="com.intalio.collaboration.utils.Configuration">
        <!-- Roles define for collaboration -->
        <property name="adminRoles">
		<set>
			<value>intalio\CollabAdministrator</value>
		</set>
	</property>
       <property name="developerRoles">
	  <set>
		<value>intalio\CollabDeveloper</value>
	  </set>
	</property>
    </bean>
</beans>
