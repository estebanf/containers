<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="com.intalio.tempo.orgmapping">
	  <context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
	  </context:component-scan>
	<tx:annotation-driven transaction-manager="orgMapping.transactionManager" />
	<context:property-placeholder
		location="file:${INTALIO_CONF}/common/base-config.properties" order="1" ignore-unresolvable="false" />
	<import resource="file:${INTALIO_CONF}/hibernate/hibernate-properties.xml" />
	<bean id="orgMapping.dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>${com.intalio.bpms.jndi.bpmsdb}</value>
		</property>
	</bean>

	<bean id="orgMapping.sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref local="orgMapping.dataSource" />
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.intalio.tempo.orgmapping.model.OrganizationUser</value>
				<value>com.intalio.tempo.orgmapping.model.OrganizationRole</value>
				<value>com.intalio.tempo.orgmapping.model.OrganizationRealm</value>
			</list>
		</property>
		<property name="hibernateProperties" ref="hibernateProperties" />
	</bean>


	<bean id="orgMapping.cacheManager" class="com.intalio.tempo.orgmapping.cache.CacheManager" />

	<!-- Hibernate Transaction Manager Definition -->
	<bean id="orgMapping.transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="orgMapping.sessionFactory" />
		</property>
	</bean>
	<bean id="orgMapping.rbacAdminClient" class="org.intalio.tempo.security.ws.RBACAdminClient">
		<constructor-arg value="http://localhost:8080/everteam/ode/processes/RBACAdminService" />
	</bean>
	<bean id="orgMapping.rbacQueryClient" class="org.intalio.tempo.security.ws.RBACQueryClient">
		<constructor-arg value="http://localhost:8080/everteam/ode/processes/RBACQueryService"/>
	</bean>
	<bean id="orgMapping.organizationClient" class="org.intalio.tempo.security.ws.OrganizationInfoClient">
		<constructor-arg value="http://localhost:8080/everteam/ode/processes/OrganizationInfoService"/>
	</bean>
	<bean id="orgMapping.userService" class="com.intalio.tempo.orgmapping.service.impl.OrganizationUserServiceImpl" />
	<bean id="orgMapping.roleService" class="com.intalio.tempo.orgmapping.service.impl.OrganizationRoleServiceImpl" />
	<bean id="orgMapping.writeLock" class="com.intalio.tempo.orgmapping.util.WriteLock" />
	<bean id="orgMapping.configuration" class="com.intalio.tempo.orgmapping.util.Configuration">
		<property name="retentionPeriod">
			<value>${com.intalio.orgmapping.retention-period}</value>
		</property>
		<property name="cachePeriod">
			<value>${com.intalio.orgmapping.cache-period}</value>
		</property>
		<property name="importHierarchy">
			<value>${com.intalio.orgmapping.import-hierarchy}</value>
		</property>
		<property name="syncPeriod">
			<value>${com.intalio.orgmapping.sync-period}</value>
		</property>
		<property name="displayNameFormat">
			<value>${com.intalio.bpms.ldap.property.user-name}</value>
		</property>
		<property name="defaultRole">
			<value>${com.intalio.bpms.role.default}</value>
		</property>
	</bean>
</beans>
