<Context reloadable="false" crossContext="true" copyXML="true">
	<ResourceLink global="registry/DeployRegistry" name="registry/DeployRegistry" type="org.intalio.deploy.registry.Registry"/>
	<Transaction factory="bitronix.tm.BitronixUserTransactionObjectFactory" />
        <!-- Create a jdbc/BPMSDB resource.
             Note that this does not create a new connection pool but reuses the global one -->
    <Resource name="jdbc/BPMSDB" auth="Container" type="javax.sql.DataSource"
                factory="bitronix.tm.resource.ResourceObjectFactory" uniqueName="jdbc/BPMSDB" />

    <Listener className="bitronix.tm.integration.tomcat55.BTMLifecycleListener" />
</Context>
