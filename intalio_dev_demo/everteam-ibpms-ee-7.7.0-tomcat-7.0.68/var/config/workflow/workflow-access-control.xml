<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.1.xsd">

	<util:map id="toolbarIconSets" value-type="java.util.Set">
		<entry key="administrator">
			<map>
				<entry key="process">
					<set>
						<value>reassign</value>
						<value>delete</value>
					</set>
				</entry>
				<entry key="task">
					<set>
						<value>delete</value>
						<value>updateDueDate</value>
						<value>claim</value>
						<value>release</value>
						<value>reassign</value>
						<value>update</value>
						<value>skip</value>
						<value>export</value>
						<value>escalate</value>
						<value>filter</value>
						<value>share</value>
					</set>
				</entry>
				<entry key="notification">
					<set>
						<value>delete</value>
					</set>
				</entry>
			</map>
		</entry>
		<entry key="manager">
			<map>
				<entry key="process">
					<set></set>
				</entry>
				<entry key="task">
					<set>
						<value>claim</value>
						<value>release</value>
						<value>reassign</value>
						<value>update</value>
						<value>skip</value>
						<value>export</value>
						<value>escalate</value>
						<value>filter</value>
						<value>share</value>
					</set>
				</entry>
				<entry key="notification">
					<set></set>
				</entry>
			</map>
		</entry>
		<entry key="employee">
			<map>
				<entry key="process">
					<set></set>
				</entry>
				<entry key="task">
					<set>
						<value>claim</value>
						<value>release</value>
						<value>export</value>
						<value>escalate</value>
						<value>filter</value>
						<value>share</value>
					</set>
				</entry>
				<entry key="notification">
					<set></set>
				</entry>
			</map>
		</entry>
	</util:map>

	<util:set id="absenceManagerRoles">
		<value>intalio\ProcessManager</value>
		<value>intalio\ProcessAdministrator</value>
		<value>examples\manager</value>
		<value>intalio\WorkflowAdministrator</value>
	</util:set>

	<util:map id="visibleTabs" value-type="java.util.Set">
		<entry key="administrator">
			<set>
				<value>tasks</value>
				<value>notifications</value>
				<value>processes</value>
			</set>
		</entry>
		<entry key="employee">
			<set>
				<value>tasks</value>
				<value>notifications</value>
				<value>processes</value>
			</set>
		</entry>
	</util:map>

	<util:map id="bindIconSetToRole" value-type="java.util.Set">
		<entry key="administrator">
			<set>
				<value>intalio\ProcessManager</value>
				<value>intalio\ProcessAdministrator</value>
				<value>intalio\WorkflowAdministrator</value>
			</set>
		</entry>
		<entry key="manager">
			<set>
				<value>examples\manager</value>
			</set>
		</entry>
		<entry key="employee">
			<set>
				<value>examples\employee</value>
			</set>
		</entry>
	</util:map>
</beans>