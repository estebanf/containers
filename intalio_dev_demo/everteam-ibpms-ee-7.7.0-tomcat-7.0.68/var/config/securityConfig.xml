	<bean id="securityProvider" class="org.intalio.tempo.security.database.DatabaseSecurityProvider" init-method="init">
		<property name="superAdminRoles">
			<set>
				<value>intalio\ProcessAdministrator</value>
			</set>
		</property>
		<property name="superAdminUsers">
			<set>
				<value>intalio\admin</value>
			</set>
		</property>
		<property name="workflowAdminRoles">
			<set>
				<value>intalio\ProcessManager</value>
				<value>intalio\ProcessAdministrator</value>
				<value>intalio\WorkflowAdministrator</value>
			</set>
		</property>
		<property name="workflowAdminUsers">
			<set>
				<value>intalio\admin</value>
			</set>
		</property>
		<property name="dao">
			<bean name="dao" class="org.intalio.tempo.security.database.dao.DAO" >
				<constructor-arg value="${com.intalio.bpms.jndi.bpmsdb}" />
			</bean>
		</property>

	</bean>

