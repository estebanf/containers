	<bean id="tokenHandler" class="org.intalio.tempo.security.impl.TokenHandler">
		<property name="secret"><value>mySecret</value></property>
		<property name="compressToken"><value>true</value></property>
		<!--
			Uncomment below property expireAfter to set expiration time for the token.
			For value see below samples
			For days, provide <num>d (example: 15d)
			For minutes, provide <num>m (example: 5m)
			For hour, provide <num>h (example: 5h)
		-->
		<!--property name="expireAfter"><value>1m</value></property-->
	</bean>

	<!-- 
		<bean id="tokenServiceImpl" class="org.intalio.tempo.security.impl.TokenServiceImpl">
			<property name="realms"><ref bean="realms"/></property>
			<property name="tokenHandler"><ref bean="tokenHandler"/></property>
		</bean>
	-->
	<bean id="ssoAuthentication" class="org.intalio.tempo.security.sso.impl.SSOAuthenticationImpl">
		<property name="certificatePath"><value>${org.intalio.tempo.configDirectory}/intalio-sso-keystore.cer</value></property>
		<property name="encryptionType"><value>RSA</value></property>
		<property name="realms"><ref bean="realms"/></property>
		<property name="usernameAttributeName"><value>emailaddress</value></property>
		<property name="rolesAttributeName"><value>adgroup</value></property>
	</bean>

	<bean id="tokenServiceImpl"
		class="org.intalio.tempo.security.impl.TokenServiceImpl">
		<constructor-arg index="0" ref="realms" />
		<constructor-arg index="1" value="https://localhost:8443/cas/proxyValidate" />

		<property name="tokenHandler"><ref bean="tokenHandler" /></property>
		<property name="authentication"><ref bean="ssoAuthentication" /></property>

		<!-- Uncomment below property, if you want to get intalio token by TokenService without specifiying password 
		from particular IP addresses, Enter multiple IP addresses by semi colon seperated-->
		<!--property name="securedIP"><value>192.168.1.38</value></property-->
	</bean>

</beans>
