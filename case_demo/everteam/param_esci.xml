<?xml version="1.0"?>
<!DOCTYPE params SYSTEM "param.dtd">
<params>
  <param>
    <PARAMSEQ>esciStartService</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>ParamesciStartService</DESCRIPTION>
    <CONTENT>true</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci_database</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci_database</DESCRIPTION>
    <CONTENT>dPortal</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.solr.home</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.solr.home</DESCRIPTION>
    <CONTENT>solr</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.solr.qretry</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.solr.qretry</DESCRIPTION>
    <CONTENT>5</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.solr.qretry.sleep</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.solr.qretry.sleep</DESCRIPTION>
    <CONTENT>100</CONTENT>
  </param>

  <!-- Speech To text (STT) : MEDIA table -->
  <param>
    <PARAMSEQ>esci.media.DBName</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.DBName</DESCRIPTION>
    <CONTENT>dPortal</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.TableName</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.TableName</DESCRIPTION>
    <CONTENT>STT_MEDIA</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.FileNameField</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.FileNameField</DESCRIPTION>
    <CONTENT>MD_FILENAME</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.DataField</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.DataField</DESCRIPTION>
    <CONTENT>MD_METADATA</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.LangField</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.LangField</DESCRIPTION>
    <CONTENT>MD_LANG</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.TranscondingIndicator</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.TranscondingIndicator</DESCRIPTION>
    <CONTENT>MD_SENDTOTRANSCODE</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.KeyField</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.KeyField</DESCRIPTION>
    <CONTENT>MD_KEY</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.media.XMLField</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.media.XMLField</DESCRIPTION>
    <CONTENT>MD_TEXTDATA</CONTENT>
  </param>

  <param>
    <PARAMSEQ>esci.fs.extractNamedEntities</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.fs.extractNamedEntities</DESCRIPTION>
    <CONTENT>yes</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.sp.extractNamedEntities</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.sp.extractNamedEntities</DESCRIPTION>
    <CONTENT>yes</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.web.extractNamedEntities</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.web.extractNamedEntities</DESCRIPTION>
    <CONTENT>yes</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.export.rootPath</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.export.rootPath</DESCRIPTION>
    <CONTENT>/tmp/esca/export</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.indexRefreshDelay</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.indexRefreshDelay</DESCRIPTION>
    <CONTENT>7200</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.indexScriptsIntoDB</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Store the index scripts in the system database</DESCRIPTION>
    <CONTENT>false</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.zookeeper</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Paramesci.zookeeper</DESCRIPTION>
    <CONTENT>case_demo_zookeeper:2181</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.solr.secure</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>Is Solr Secure</DESCRIPTION>
    <CONTENT>true</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.solrIndexing.sliceSize</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>size of the slice of solr docs to add to the index</DESCRIPTION>
    <CONTENT>1000</CONTENT>
  </param>
  <param>
    <PARAMSEQ>esci.solrIndexing.sliceDelay</PARAMSEQ>
    <USERCODE>all</USERCODE>
    <DESCRIPTION>delay before sending a slice of solr docs to the index (seconds)</DESCRIPTION>
    <CONTENT>5</CONTENT>
  </param>
  
</params>
